<div class='row images'>
  <% @places.each do |place| %>
    <div class="col-md-3">
      <div class='wrap'>
        <%= image_tag(place.image_path, class: 'image', size: '400') %>
      <div class='title'><%= place.name %></div>
        <div class='description'><%= place.description %></div>
      </div>
    </div>
  <% end %>
</div>
