<!DOCTYPE html>
<html>
  <head>
    <title>FavoritePlaces</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='head row row justify-content-md-center'>
      <div class='col col-lg-10'>
        <p class='logo'>FavoritePlaces</p>
      </div>
      <div class='col col-lg-2'>
        <% if current_user %>
          <%= "Hello, #{current_user.email}" %>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to "Sign up", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-danger' %>
          <%= link_to "Sign in", "#sign_in", "data-toggle" => "modal", :class => 'btn btn-light' %>
          <%= render 'shared/sign_in' %>
          <%= render 'shared/sign_up' %>
        <% end %>
      </div>
    </div>
  <div class='body'>
    <div class='area'>
      <%= yield %>
    </div>
  </div>
  </body>
</html>
