<div class="modal hide fade in" id="sign_in">
  <div class="modal-body">
    <%= form_for(User.new, url: session_path(:user), html:{id: 'sign_in_user', :'data-type' => 'json', class: 'form-group'}, remote: true) do |f| %>
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div>
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if Devise.mappings[:user].rememberable? -%>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div>
        <%= f.submit "Sign in" %>
      </div>
    <% end %>
  </div>
</div>
